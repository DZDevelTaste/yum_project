<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="medicine">
	<delete id="deleteByMedicine" parameterType="medicinevo">
		<![CDATA[
			DELETE FROM "medicine" WHERE no = #{no}
		]]>
	</delete>
	<select id="findByMedicine" resultType="medicinevo">
		<![CDATA[
			SELECT no, code, name, company, ingredient, efficacy, precaution, caution, sideeffect FROM "medicine"
		]]>
	</select>
	<insert id="addMedicine" parameterType="medicinevo">
		<![CDATA[
			INSERT INTO "medicine" VALUES (#{no}, #{code}, #{name}, #{company}, #{ingredient}, #{efficacy}, #{precaution}, #{caution}, #{sideeffect})
		]]>
	</insert>
	<update id="updateMedicine" parameterType="medicinevo">
		<![CDATA[
			 UPDATE "medicine" SET password = #{p} WHERE name = #{n}
		]]>
	</update>
</mapper>